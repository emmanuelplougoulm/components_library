---
import Navbar from '@components/Navbar/Navbar.vue';
import { links, ctaButtons } from '@components/Navbar/config';
import '@styles/global.css';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Navbar</title>
    <link rel="icon" href="assets/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <Navbar links={links} ctaButtons={ctaButtons} client:load />
  </body>
</html>

<style>
  body {
    margin: 0;
    min-height: 100vh;
    background-image: linear-gradient(to bottom, #f9fafb, #d2d6db);
  }
</style>
