---
import RadioButton from '@components/RadioButton/RadioButton.vue';
import '@styles/global.css';
import { Icon } from 'astro-icon/components';
import { ref } from 'vue';

const selected = ref(false);
const isSelected = ref(true);
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RadioButton</title>
    <link rel="icon" href="assets/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <RadioButton
          label="weekly"
          size="sm"
          v-model:selected={selected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
        </RadioButton>
        <RadioButton
          label="weekly"
          size="md"
          v-model:selected={selected}
          disabled={false}
          client:load
        />
        <RadioButton
          label="weekly"
          size="lg"
          v-model:selected={selected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="weekly"
          size="xl"
          v-model:selected={selected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
          <Icon name="arrow-down" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="weekly"
          size="xxl"
          v-model:selected={selected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconOnly" />
        </RadioButton>
      </div>
      <div class="row">
        <RadioButton
          label="monthly"
          size="sm"
          v-model:selected={isSelected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
        </RadioButton>
        <RadioButton
          label="monthly"
          size="md"
          v-model:selected={isSelected}
          disabled={false}
          client:load
        />
        <RadioButton
          label="monthly"
          size="lg"
          v-model:selected={isSelected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="monthly"
          size="xl"
          v-model:selected={isSelected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
          <Icon name="arrow-down" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="monthly"
          size="xxl"
          v-model:selected={isSelected}
          disabled={false}
          client:load
        >
          <Icon name="calendar-event" slot="iconOnly" />
        </RadioButton>
      </div>
      <div class="row">
        <RadioButton
          label="annually"
          size="sm"
          v-model:selected={isSelected}
          disabled={true}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
        </RadioButton>
        <RadioButton
          label="annually"
          size="md"
          v-model:selected={isSelected}
          disabled={true}
          client:load
        />
        <RadioButton
          label="annually"
          size="lg"
          v-model:selected={isSelected}
          disabled={true}
          client:load
        >
          <Icon name="calendar-event" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="annually"
          size="xl"
          v-model:selected={isSelected}
          disabled={true}
          client:load
        >
          <Icon name="calendar-event" slot="iconLeft" />
          <Icon name="arrow-down" slot="iconRight" />
        </RadioButton>
        <RadioButton
          label="annually"
          size="xxl"
          v-model:selected={isSelected}
          disabled={true}
          client:load
        >
          <Icon name="calendar-event" slot="iconOnly" />
        </RadioButton>
      </div>
    </div>
  </body>
</html>

<style>
  body {
    font-family: 'Noto Sans';
    margin: 0;
    display: flex;
    justify-content: center;
    height: 100vh;
    padding: 110px 0px;
    flex-wrap: wrap;
  }

  .container {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  .row {
    display: flex;
    align-items: center;
    gap: 24px;
    flex-wrap: wrap;
  }

  fieldset {
    border: none;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
</style>
