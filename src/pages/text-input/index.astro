---
import TextInput from '@components/TextInput/TextInput.vue';
import BaseIcon from '@components/BaseIcon/BaseIcon.vue';
import { ref } from 'vue';

const text = ref('');
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Text input</title>
    <link rel="icon" href="assets/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="inputs_container">
      <TextInput
        label="Email"
        v-model:text={text}
        hint="This is a hint text"
        disabled={false}
        error={false}
        client:load><BaseIcon iconName="question-circle" slot="iconRight" /></TextInput
      >

      <TextInput
        label="Email"
        v-model:text={text}
        hint="This is a hint text"
        disabled={false}
        error={false}
        client:load
      >
        <BaseIcon iconName="email" slot="iconLeft" />
        <BaseIcon iconName="question-circle" slot="iconRight" />
      </TextInput>

      <TextInput
        label="Email"
        v-model:text={text}
        hint="This is a hint text"
        disabled={false}
        error={false}
        client:load
      >
        <BaseIcon iconName="question-circle" slot="iconRight" />
      </TextInput>

      <TextInput
        label="Email"
        v-model:text={text}
        hint="This is a hint text"
        client:load
        disabled={false}
        error={true}
      >
        <BaseIcon iconName="question-circle" slot="iconRight" />
      </TextInput>
    </div>
  </body>
</html>

<style>
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ffffff;
    padding: 112px 0px;
  }

  .inputs_container {
    display: flex;
    flex-direction: column;
    background-color: #ffffff;

    width: 340px;
    gap: 48px;
  }
</style>
