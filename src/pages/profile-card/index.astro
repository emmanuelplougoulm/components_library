---
import ProfileCard from '@components/ProfileCard/ProfileCard.vue';
import '@styles/global.css';
import thumbnailImage from '@assets/profile.png';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile card</title>
    <link rel="icon" href="/public/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <main>
      <ProfileCard
        thumbnail={thumbnailImage.src}
        name="sarah dole"
        position="front end engineer @ microsoft"
        description="I turn coffee into bugs which are fixed by someone else. Certified Stack Overflow and ChatGPT developer."
        buttonLabel="contact me"
        client:load
      />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    height: 100vh;
    padding-top: 200px;
    background-image: linear-gradient(to bottom, #f9fafb, #d2d6db);
    box-sizing: border-box;
    display: flex;
    justify-content: center;
  }

  main {
    height: 100%;
  }
</style>
