---
import Tabs from '@components/Tabs/Tabs.vue';
import { tabs } from '@components/Tabs/config';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tabs</title>
    <link rel="icon" href="assets/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="tabs_container"><Tabs tabs={tabs} client:load /></div>
  </body>
</html>

<style>
  body {
    font-family: 'Noto Sans';
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #ffffff;
    padding: 200px 0px;
  }

  .tabs_container {
    display: flex;
    flex-direction: column;
    background-color: #ffffff;

    width: 300px;
    gap: 24px;
    /* border: 1px red solid; */
  }

  .item {
    height: 160px;
  }
</style>
