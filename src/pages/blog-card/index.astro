---
import BlogCard from '@components/BlogCard/BlogCard.vue';
import blogImage from '@assets/living_room.jpg';
---

<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog Card component</title>
    <link rel="icon" href="assets/favicon.ico" type="image/x-icon" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div>
      <BlogCard
        badgeStatus="success"
        badgeLabel="Interior"
        btnLabel="Read more"
        image={blogImage.src}
        title="Top 5 Living Room Inspirations"
        excerpt="Curated vibrants colors for your living, make it pop & calm in the same time."
      />
    </div>
  </body>
</html>

<style>
  body {
    margin: 0;
    display: flex;
    justify-content: center;
    height: 100vh;
    padding: 7.5rem 0rem;
    background-image: linear-gradient(to bottom, #f9fafb, #d2d6db);
  }
</style>
