{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@icons/*": ["src/icons/*"],
      "@custom-types/*": ["src/custom-types/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "types": ["vite-plugin-svgr/client", "vite/client"]
  },
  "include": ["src/**/*", "src/custom-types/svg.d.ts"]
}
