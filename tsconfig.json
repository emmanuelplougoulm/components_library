{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/types/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "react",
    "types": ["vite-plugin-svgr/client"]
  },
  "include": ["src/**/*", "src/types/svg.d.ts"]
}
